<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team3webnovel.mappers.BoardMapper">

    <!-- 게시글 리스트 조회 -->
    <select id="getBoardList" resultMap="boardResultMap">
        SELECT 
            board_id, 
            user_id, 
            title, 
            content, 
            created_at, 
            updated_at, 
            view_count
        FROM board
        ORDER BY created_at DESC
    </select>

    <!-- 특정 게시글 조회 -->
    <select id="getBoardById" parameterType="int" resultMap="boardResultMap">
        SELECT 
            board_id, 
            user_id, 
            title, 
            content, 
            created_at, 
            updated_at, 
            view_count
        FROM board
        WHERE board_id = #{boardId}
    </select>

    <!-- 게시글 작성 (새 게시글 저장) -->
    <insert id="insertBoard" parameterType="com.team3webnovel.vo.BoardVo">
        INSERT INTO board (
            board_id, user_id, title, content, created_at, view_count
        ) VALUES (
            #{boardId}, #{userId}, #{title}, #{content}, SYSDATE, 0
        )
    </insert>

    <!-- 게시글 업데이트 -->
    <update id="updateBoard" parameterType="com.team3webnovel.vo.BoardVo">
        UPDATE board
        SET 
            title = #{title}, 
            content = #{content}, 
            updated_at = SYSDATE
        WHERE board_id = #{boardId}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteBoard" parameterType="int">
        DELETE FROM board
        WHERE board_id = #{boardId}
    </delete>

    <!-- 게시글 조회 수 증가 -->
    <update id="increaseViewCount" parameterType="int">
        UPDATE board
        SET view_count = view_count + 1
        WHERE board_id = #{boardId}
    </update>

    <!-- 게시글 정보를 담는 resultMap -->
    <resultMap id="boardResultMap" type="com.team3webnovel.vo.BoardVo">
        <result property="boardId" column="BOARD_ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="title" column="TITLE"/>
        <result property="content" column="CONTENT"/>
        <result property="createdAt" column="CREATED_AT" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP"/>
        <result property="updatedAt" column="UPDATED_AT" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP"/>
        <result property="viewCount" column="VIEW_COUNT"/>
    </resultMap>
</mapper>
